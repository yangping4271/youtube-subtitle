{
  "name": "subtitle-translator-extension",
  "version": "1.0.0",
  "description": "YouTube 字幕翻译 Chrome 扩展 - TypeScript 版本",
  "type": "module",
  "scripts": {
    "build": "node esbuild.config.js",
    "build:prod": "NODE_ENV=production node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "cli": "node --loader ts-node/esm src/cli/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "dotenv": "^16.3.1"
  }
}
