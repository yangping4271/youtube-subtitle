{
  "manifest_version": 3,
  "name": "YouTube 字幕翻译",
  "version": "1.1.0",
  "description": "AI 驱动的 YouTube 字幕翻译工具",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Subtitle Translator"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "config.js",
        "translator.js",
        "subtitle-parser.js",
        "transcript-core.js",
        "content.js"
      ],
      "css": [
        "subtitle-overlay.css",
        "transcript-styles.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "inject.js"
      ],
      "world": "MAIN",
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}